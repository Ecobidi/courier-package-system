<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Courier Pickup Stations</h3>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modelId">Add New Pickup Station</button>
    </div> 
  </div>
  
  <div class="row">
    <div class="col-12">
      <form id="search-form" method="GET" action="/camps?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Pickup Stations</h4>
      <table class="table table-bordered table-striped text-white">
        <thead class="font-weight-bold">
          <tr>
            <td>Name of Station</td>
            <td>Contact Address</td>
            <td>State</td>
            <td>Telephone</td>
            <td>Email</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% stations.forEach((m) => { %>
            <tr>
              <td><%= m.station_name %></td>
              <td><%= m.address %></td>
              <td><%= m.state %></td>
              <td><%= m.phone %></td>
              <td><%= m.email %></td>
              <td>
                <a href='<%= "/stations/remove/" + m._id %>' class="btn btn-sm btn-danger mx-1 my-1">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>

 <!-- Modal -->
 <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Pickup Station</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <div class="modal-body">
        <form action="/stations/new" method="POST" enctype="multipart/form-data">
          <div class="form-group col-12">
            <label>Name of Pickup Station: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="station_name">
          </div>
          <div class="form-group col-12">
            <label>Contact Address: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="address">
          </div>
          <div class="form-group col-12">
            <label>State Situated In: <strong class="text-danger">*</strong></label>
            <select required class="form-control" name="state">
              <option></option>
              <% states.forEach(s => { %>
                <option value='<%= s %>'><%= s %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group col-12">
            <label>Contact Telephone: <strong class="text-danger">*</strong></label>
            <input type="text" class="form-control" name="phone">
          </div>
          <div class="form-group col-12">
            <label>Email: <strong class="text-danger">*</strong></label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group mt-4">
            <button class="btn btn-success form-control" type="submit">Proceed</button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
  

<%- include ('partials/bottom') %>